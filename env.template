# Career Autopilot Environment Variables

# Path to the Excel tracker file (absolute path)
TRACKER_PATH=/Users/ptg/Documents/career_autopilot_tracker.xlsx

# Directory to store generated application files
APPLY_PACK_DIR=./data/applications

# Directory to store resume files
RESUME_DIR=./data/resumes

# Database configuration
DATABASE_URL=sqlite:///./data/app.db

# Logging configuration
LOG_LEVEL=INFO

# CORS configuration for frontend
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Overleaf API Configuration
OVERLEAF_API_KEY=your_overleaf_api_key_here
OVERLEAF_BASE_URL=https://www.overleaf.com
OVERLEAF_PROJECT_PO=your_po_project_id_here
OVERLEAF_PROJECT_PM=your_pm_project_id_here
OVERLEAF_PROJECT_TPM=your_tpm_project_id_here

# LinkedIn Configuration
LINKEDIN_EMAIL=your_linkedin_email@example.com
LINKEDIN_PASSWORD=your_linkedin_password_here
LINKEDIN_SESSION_COOKIE=your_linkedin_session_cookie_here

# Indeed Configuration
INDEED_EMAIL=your_indeed_email@example.com
INDEED_PASSWORD=your_indeed_password_here

# Chrome Profile Configuration for ATS Autofill
CHROME_PROFILE_PATH=/Users/ptg/Library/Application Support/Google/Chrome/Default
CHROME_USER_DATA_DIR=/Users/ptg/Library/Application Support/Google/Chrome
CHROME_EXECUTABLE_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome

# ATS System Configuration
ATS_HEADLESS_MODE=false
ATS_TIMEOUT=30000
ATS_WAIT_FOR_NAVIGATION=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=your_email@gmail.com

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_ENV=development
DEBUG=true
